<!-- Get all the information relevant to music media -->
<%= form_tag("form",:method => :post, :id => "music_form", :name => "music_form", :style => "display:none") do %>

<!-- General Stuff -->
<div class="field">
  <label>Enter Name of the Music:</label>
  <input type="text" name="name" id="name" required>
  <!--  </%= text_field_tag(:name) %>-->
</div>

<div class="field">
  <label>Enter Score:</label>
  <%= number_field(:score, :temp, in: 1..10) %>
</div>

<div class="field">
  <label>Enter the Status of the Music:</label>
  <%= text_field_tag(:currentStatus) %>
</div>

<div class="field">
  <label>Would You Like to Favorite It?</label>
  <%= check_box_tag(:favorite) %>
</div>

<div class="field">
  <label>Enter Comments:</label>
  <%= text_area_tag(:comments) %>
</div>

<div class="field">
  <label>Enter the source of the Music:</label>
  <%= text_field_tag(:source) %>
</div>

<div class="field">
  <label>Enter the Amount of Time You Have Played This:</label>
  <%= number_field(:replay, :temp, in: 0..100000) %>
</div>

  <!-- Special Parameters for Music-->
  <div class="field">
    <label>Enter the Artist of This Particular Song:</label>
    <input type="text" name="artist" id="artist" required>
    <!--  </%= text_field_tag(:artist) %>-->
  </div>
  <div class="field">
    <label>Enter the Album This Song Belongs To:</label>
    <input type="text" name="album" id="album" required>
    <!--  </%= text_field_tag(:album) %>-->
  </div>

  <div class="field">
    <%= submit_tag "Submit Music Media" %>
  </div>

<% end %>
