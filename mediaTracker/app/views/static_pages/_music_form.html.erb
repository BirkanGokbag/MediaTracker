<%= form_for :personal_media_parameters, :html => {:id => "music_form", :name => "music_form", :style => "display:none", :role => "form"} do |form| %>
  <div class="field">
  <%= form.label :score %>
  <%= form.number_field :score, id: :personal_media_parameter_score %>
  </div>
  <div class="field">
  <%= form.label :currentStatus %>
  <%= form.text_field :currentStatus, id: :personal_media_parameter_currentStatus %>
  </div>
  <div class="field">
  <%= form.label :favorite %>
  <%= form.check_box :favorite, id: :personal_media_parameter_favorite %>
  </div>
  <div class="field">
  <%= form.label :comments %>
  <%= form.text_area :comments, id: :personal_media_parameter_comments %>
  </div>
  <div class="field">
  <%= form.label :source %>
  <%= form.text_field :source, id: :personal_media_parameter_source %>
  </div>
  <div class="field">
  <%= form.label :replay %>
  <%= form.number_field :replay, id: :personal_media_parameter_replay %>
  </div>


  <div style = "display:hidden">
    <%= form.label :users_id %>
    <%= form.text_field :users_id, id: :personal_media_parameter_users_id, :value => session[:current_user_id] %>
  </div>
  <!-- <div class = "display:hidden">
    </%= form.label :general_medias_id %>
    </%= form.text_field :general_medias_id, id: :personal_media_parameter_general_medias_id %>
  </div> -->

    <%= form.fields_for :musics do |f| %>
    <div class="field">
      <%= f.label :artist %>
      <%= f.number_field :artist, id: :music_artist %>
    </div>
    <div class="field">
      <%= f.label :album %>
      <%= f.number_field :album, id: :music_album %>
    </div>
    <!--
    <div class="field">
      </%= form.label :general_medias_id %>
      </%= form.text_field :general_medias_id, id: :personal_media_parameter_general_medias_id %>
    </div> -->
    <% end %>

  <div class="actions">
  <%= form.submit %>
  </div>

<% end %>
