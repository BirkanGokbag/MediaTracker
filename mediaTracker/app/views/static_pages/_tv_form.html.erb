<!-- Get all the information relevant to tv -->
<% if params[:mediaId].nil?%>
  <% destination = "form" %>
<% else %>
  <% destination = "edit" %>
<% end %>
<%= form_tag(destination,:method => :post, :id => "tv_form", :name => "tv_form", :style => "display:none") do %>

<!-- This input is hidden and carries the id of the media that is being sent to the edit form in order to find the media that will be edited. -->
<input type="number" name="editId" id = "editId" value="" style = "display:none">

  <!-- General Stuff -->
  <div class="field">
    <label>Enter Name of the TV Show:</label>
      <input type="text" name="name" id="name" required>
      <!--  </%= text_field_tag(:name) %>-->
  </div>

  <div class="field">
    <label>Enter Score:</label>
    <%= number_field(:score, :temp, in: 1..10) %>
  </div>

  <div class="field">
    <label>Enter the Status of the TV Show:</label>
    <%= text_field_tag(:currentStatus) %>
  </div>

  <div class="field">
    <label>Would You Like to Favorite It?</label>
    <%= check_box_tag(:favorite) %>
  </div>

  <div class="field">
    <label>Enter Comments:</label>
    <%= text_area_tag(:comments) %>
  </div>

  <div class="field">
    <label>Enter the source of the TV Show:</label>
    <%= text_field_tag(:source) %>
  </div>

  <div class="field">
    <label>Enter the Amount of Time You Have Replayed This:</label>
    <%= number_field(:replay, :temp, in: 0..100000) %>
  </div>

  <!-- Special Parameters for TV-->
  <div class="field">
    <label>Enter the Number of Seasons of The TV Show:</label>
    <input min="0" max="100000" type="number" name="numberOfSeasons[temp]" id="numberOfSeasons_temp" required>
    <!--</%= number_field(:numberOfSeasons, :temp, in: 0..100000) %>-->
  </div>
  <div class="field">
    <label>Enter the Number of Episodes This TV Show Has:</label>
    <input min="0" max="100000" type="number" name="totalEpisodes[temp]" id="totalEpisodes_temp" required>
    <!--</%= number_field(:totalEpisodes, :temp, in: 0..100000) %>-->

  </div>

  <div class="field">
    <%= submit_tag "Submit TV Media" %>
  </div>

<% end %>
