<!-- Get all the information relevant to movie media -->
<%= form_tag("form",:method => :post, :id => "movie_form", :name => "movie_form", :style => "display:none") do %>

<!-- General Stuff -->
<div class="field">
  <label>Enter Name of the Movie:</label>
  <%= text_field_tag(:name) %>
</div>

<div class="field">
  <label>Enter Score:</label>
  <%= number_field(:score, :temp, in: 1..10) %>
</div>

<div class="field">
  <label>Enter the Status of the Movie:</label>
  <%= text_field_tag(:currentStatus) %>
</div>

<div class="field">
  <label>Would You Like to Favorite It?</label>
  <%= check_box_tag(:favorite) %>
</div>

<div class="field">
  <label>Enter Comments:</label>
  <%= text_area_tag(:comments) %>
</div>

<div class="field">
  <label>Enter the source of the Movie:</label>
  <%= text_field_tag(:source) %>
</div>

<div class="field">
  <label>Enter the Amount of Time You Have Played This:</label>
  <%= number_field(:replay, :temp, in: 0..100000) %>
</div>

  <!-- Special Parameters for Movie-->
  <div class="field">
    <label>Enter the Director of This Movie:</label>
    <%= text_field_tag(:director) %>
  </div>

  <div class="field">
    <%= submit_tag "Submit Movie Media" %>
  </div>

<% end %>
