<div id = "container">
  <div id = "header">
    <h1><%= @Title %></h1>
  </div>
  <% if user_signed_in? %>
    <%= render "search_form.html" %>
  <% end %>
  <div id = "main">
    <div id = "mainArea">
      <h3>Track Your Media Collection</h3>
      <ul>
        <li>See your every media element in one place</li>
        <li>Custom entries support every media element</li>
        <li>Customize the look of your profile</li>
      </ul>

      <% if user_signed_in? %>
        <h3>Options</h3>
        <ul>
          <li>Click <a href="/static_pages/addMedia">here</a> to add a media</li>
          <li>Click <a href="/static_pages/preferences">here</a> to update preferences</li>
          <% if user_signed_in? %>
            <li>Click <%= link_to "here", current_user %> to see your profile</li>
          <% end %>
        <ul>
      <% end %>
    </div>
    <--! <% if user_signed_in? %>
      <div id = "latestUpdates">
        <h3>Followers</h3>
        <% for i in 1..@limitb do%>
          <div class = "followers">
            <p class = "follower"><%= @user.find(@follower[i].id).username %></p>
          </div>
        <% end %>
      </div>
    <% else %> -->
      <div id = "latestUpdates">
        <h3>Latest Updates</h3>
        <% for i in 1..@limita do%>
          <div class = "history">
            <p><%= @historylog[@historylength - i].users.username + @historylog[@historylength - i].historyMessage %><%= @historylog[@historylength - i].created_at %></p>
          </div>
        <%# end %>
      </div>
    <% end %>
  </div>
</div>
