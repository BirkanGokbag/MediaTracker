<div id = "container">
 <% if user_signed_in? %>
 <%= render "static_pages/header.html" %>
 <% end %>
  <div id = "main">
    <div class="col-sm-8"> 
      <div class = "well">
        <h3 class = "jumbotron">Track Your Media Collection</h3>
        <ul>
          <li>See your every media element in one place</li>
          <li>Custom entries support every media element</li>
          <li>Customize the look of your profile</li>
        </ul>
      </div>
    </div>
    
     <div class="col-sm-4"> 
      <div class = "well">
        <h3 class = "jumbotron">Latest Updates</h3>
        <ul>
          <% puts "HIT" %>
          <% @historyLogs.each do |f| %>
            <li><%= link_to User.find(f.users_id).username, "/users/#{f.users_id}"%> <%= f.historyMessage %> <%= f.updated_at %></li>
          <% end %>
        </ul>
      </div>

     </div>
  </div>
</div>
