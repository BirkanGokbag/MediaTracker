      <script>
        var prev = "";
        $("#select_form").on("change", function() {
            //based on what is selected, only show that form
            if (prev != 0){
              $(prev).hide();
            }
            $("#" + $(this).val()).show();
            prev = "#" + $(this).val();
        });
        $("#number_of_items").on("change", function() {
            //based on what is selected, only show that form
            var end = $(this).val();
            var i = 0;
            for (i = 1; i <= end; i++){
              $("." + i).show();
            }
            for (i = 10; i > end; i--){
              $("." + i).hide();
            }
        });
