<script>
  $("#number_of_items").on("change", function() {
      //based on what number is shown, show that many fields
      var last = $(this).val();
      var i = 0;
      for (i = 1; i <= last; i++){
        $("." + i).show();
        $("." + i + " > input").prop('required',true);
      }
      for (i = 10; i > last; i--){
        $("." + i).hide();
        $("." + i + " > input").prop('required',false);
      }
  });
</script>
