<p id="notice"><%= notice %></p>

<h1>Preferences</h1>

<table>
  <thead>
    <tr>
      <th>Wallpaper</th>
      <th>Fontsize</th>
      <th>Font</th>
      <th>Profilepicture</th>
      <th>Privacy</th>
      <th>Fontcolor</th>
      <th>User Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @preferences.each do |preference| %>
      <tr>
        <td><%= preference.wallpaper %></td>
        <td><%= preference.fontSize %></td>
        <td><%= preference.font %></td>
        <td><%= preference.profilePicture %></td>
        <td><%= preference.privacy %></td>
        <td><%= preference.fontColor %></td>
        <td><%= preference.users_id %></td>
        <td><%= link_to 'Show', preference %></td>
        <td><%= link_to 'Edit', edit_preference_path(preference) %></td>
        <td><%= link_to 'Destroy', preference, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

